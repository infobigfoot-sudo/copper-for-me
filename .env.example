# Optional: protect /api/economy-snapshot/rebuild (defaults to MARKET_SNAPSHOT_API_TOKEN)
ECONOMY_SNAPSHOT_API_TOKEN=
# Optional: microCMS snapshot write key (POST/PATCH for economy_snapshots)
MICROCMS_SNAPSHOT_WRITE_API_KEY=
MICROCMS_SNAPSHOT_WRITE_API_KEY_A=
# Optional: Vercel Cron auth token (Authorization: Bearer <CRON_SECRET>)
CRON_SECRET=
# Optional: daily cache file path (JST 1/day fetch)
# ECONOMY_CACHE_FILE=.cache/copper_for_me_economy_cache.json
ECONOMY_CACHE_FILE=/tmp/copper_for_me_economy_cache.json
# Optional: snapshot output path
# ECONOMY_SNAPSHOT_FILE=public/data/economy_snapshot.json
# Optional: if true, when snapshot/cache is empty, page render can call live APIs directly.
# Keep false to avoid long loading/spinner on first view.
ECONOMY_ALLOW_LIVE_FALLBACK=false

# Optional: microCMS request timeout (milliseconds)
MICROCMS_FETCH_TIMEOUT_MS=12000

